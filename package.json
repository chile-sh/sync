{
  "name": "sync",
  "version": "1.0.0",
  "main": "build/app.js",
  "license": "GPL-3.0",
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  },
  "scripts": {
    "ts-node": "node -r tsconfig-paths/register -r ts-node/register -r dotenv/config",
    "start": "yarn ts-node --inspect=5858 src/app.ts",
    "build:ts": "rm -rvf build && tsc",
    "build": "yarn install && yarn build:ts",
    "serve": "node build/app.js",
    "test": "yarn lint && jest",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.@(ts|js|tsx|jsx)'",
    "lint:fix": "yarn lint --fix"
  },
  "devDependencies": {
    "@chile-sh/eslint-config-ts": "^3.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/ioredis": "^4.0.17",
    "@types/jest": "^24.0.12",
    "@types/nanoid": "^2.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^3.0.5",
    "jest": "^24.8.0",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@sentry/node": "5.1.0",
    "@types/pino": "^5.8.10",
    "dotenv": "^7.0.0",
    "fastify": "^2.8.0",
    "ioredis": "^4.14.1",
    "nanoid": "^2.1.1",
    "pino": "^5.13.3"
  }
}
